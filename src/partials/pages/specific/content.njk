      <div class="column col-center specific-main specific-main-frame">
        <section class="specific-header">
          <div class="specific-header-title">
            <i class="fa-solid fa-user-check"></i>
            <h1>특이사항 등록/승인</h1>
          </div>
          <span class="specific-header-meta">등록, 전체조회, 승인/반려를 한 번에 처리합니다.</span>
        </section>

        <div class="specific-grid">
          <section class="specific-panel">
            <div class="specific-panel-title">특이사항 등록</div>
            <div class="specific-form">
              <div class="specific-field">
                <label for="agentEmpNo">사번</label>
                <input id="agentEmpNo" data-role="agentEmpNo" type="text" class="specific-input" placeholder="예) 204075" />
              </div>
              <div class="specific-field">
                <label for="agentName">상담원명</label>
                <input id="agentName" data-role="agentName" type="text" class="specific-input" placeholder="예) 홍길동" />
              </div>
              <div class="specific-field">
                <label for="excludeType">특이사항 유형</label>
                <select id="excludeType" data-role="excludeType" class="specific-input">
                  <option value="콜 미수신">콜 미수신</option>
                  <option value="교육/회의">교육/회의</option>
                  <option value="시스템 점검">시스템 점검</option>
                  <option value="기타">기타</option>
                </select>
              </div>
              <div class="specific-field">
                <label for="excludeDate">일자</label>
                <input id="excludeDate" data-role="excludeDate" type="date" class="specific-input" />
              </div>
              <div class="specific-field">
                <label for="excludeStartTime">시간 범위</label>
                <div class="specific-time-range">
                  <input id="excludeStartTime" data-role="excludeStartTime" type="time" class="specific-input" />
                  <span class="specific-range-sep">~</span>
                  <input id="excludeEndTime" data-role="excludeEndTime" type="time" class="specific-input" />
                </div>
              </div>
              <div class="specific-field">
                <label for="excludeReason">사유</label>
                <textarea id="excludeReason" data-role="excludeReason" rows="4" class="specific-input specific-textarea" placeholder="특이사항 내용을 입력하세요."></textarea>
              </div>
              <button id="registerExcludeBtn" data-role="registerExcludeBtn" class="specific-btn specific-btn-primary">
                <i class="fa-solid fa-plus"></i> 승인 요청 등록
              </button>
            </div>
          </section>

          <section class="specific-panel">
            <div class="specific-panel-title">나의 신청 내역</div>
            <div class="specific-history-toolbar">
              <div class="specific-history-range">
                <input id="myDateFrom" data-role="myDateFrom" class="specific-input specific-date" type="date" />
                <span class="specific-range-sep">~</span>
                <input id="myDateTo" data-role="myDateTo" class="specific-input specific-date" type="date" />
              </div>
            </div>
            <div class="specific-table-wrap specific-history-scroll">
              <table class="specific-table specific-my-table">
                <thead>
                  <tr>
                    <th>상태</th>
                    <th>유형</th>
                    <th>시간</th>
                    <th>신청일시</th>
                    <th>내용</th>
                  </tr>
                </thead>
                <tbody id="myRequestBody" data-role="myRequestBody"></tbody>
              </table>
            </div>
          </section>
        </div>

        <section class="specific-panel">
            <div class="specific-panel-title">관리자 전체 조회/처리</div>
            <div class="specific-stats">
              <div class="specific-stat-card">
                <span>전체</span>
                <strong id="countAll" data-role="countAll">0</strong>
              </div>
              <div class="specific-stat-card">
                <span>승인대기</span>
                <strong id="countPending" data-role="countPending">0</strong>
              </div>
              <div class="specific-stat-card">
                <span>승인완료</span>
                <strong id="countApproved" data-role="countApproved">0</strong>
              </div>
              <div class="specific-stat-card">
                <span>반려</span>
                <strong id="countRejected" data-role="countRejected">0</strong>
              </div>
            </div>
            <div class="specific-toolbar">
              <div class="specific-filter-group">
                <button class="specific-filter-btn is-active" data-action="specific-filter" data-target="all" data-filter="all">전체</button>
                <button class="specific-filter-btn" data-action="specific-filter" data-target="pending" data-filter="pending">승인대기</button>
                <button class="specific-filter-btn" data-action="specific-filter" data-target="approved" data-filter="approved">승인완료</button>
                <button class="specific-filter-btn" data-action="specific-filter" data-target="rejected" data-filter="rejected">반려</button>
              </div>
              <input id="specificSearch" data-role="specificSearch" class="specific-input specific-search" type="text" placeholder="사번/상담원명/사유 검색" />
            </div>
            <div class="specific-table-wrap">
              <table class="specific-table">
                <thead>
                  <tr>
                    <th>상태</th>
                    <th>사번</th>
                    <th>상담원명</th>
                    <th>유형</th>
                    <th>시간</th>
                    <th>사유</th>
                    <th>처리</th>
                  </tr>
                </thead>
                <tbody id="specificTableBody" data-role="specificTableBody"></tbody>
              </table>
            </div>
        </section>

        <section class="specific-panel">
          <div class="specific-panel-title">이전 처리내역 조회</div>
          <div class="specific-history-toolbar">
            <div class="specific-history-range">
              <input id="historyDateFrom" data-role="historyDateFrom" class="specific-input specific-date" type="date" />
              <span class="specific-range-sep">~</span>
              <input id="historyDateTo" data-role="historyDateTo" class="specific-input specific-date" type="date" />
            </div>
            <input
              id="historySearch" data-role="historySearch"
              class="specific-input specific-search"
              type="text"
              placeholder="사번/상담원명/사유 검색"
            />
          </div>
          <div class="specific-table-wrap specific-history-scroll">
            <table class="specific-table specific-history-table">
              <thead>
                <tr>
                  <th>상태</th>
                  <th>사번</th>
                  <th>상담원명</th>
                  <th>유형</th>
                  <th>요청시간</th>
                  <th>처리일시</th>
                  <th>사유</th>
                </tr>
              </thead>
              <tbody id="specificHistoryBody" data-role="specificHistoryBody"></tbody>
            </table>
          </div>
          <div id="historyPagination" data-role="historyPagination" class="specific-history-pagination"></div>
        </section>
      </div>
