  <div id="center-column" class="column col-center chat-center-column">
    <div class="panel panel--kms">
      <div class="panel__header panel__header--kms">
        <h3 class="chat-kms-title">
          <i class="fa-solid fa-book"></i>
          KMS 매뉴얼
        </h3>
        <div class="chat-gap-2-row">
          <input
            type="text"
            placeholder="검색..."
            class="field field--kms-search"
          >
          <button class="btn btn--primary btn--kms-search primary-btn">
            <i class="fa-solid fa-search"></i>
          </button>
        </div>
      </div>
      <div class="chat-kms-filter-row">
        {% for filter in chat_data.kms_filters or [] %}
          <button class="tab__item tab__item--chat-filter{% if loop.first %} is-active primary-btn{% endif %}">
            {{ filter }}
          </button>
        {% endfor %}
      </div>
    </div>
    <div class="ui-stack-3">
      {% for item in chat_data.kms_items or [] %}
        <div class="kms-card" data-role="kms-card">
          <div class="kms-header-row">
            <div class="chat-inline-center"><span class="kms-tag">{{ item.tag }}</span><span
                class="ui-title-sm">{{ item.title }}</span></div><button class="chat-text-muted"><i
                class="fa-solid fa-chevron-down"></i></button>
          </div>
          <p class="chat-kms-description">
            {{ item.description }}
          </p>
          <div
            class="ui-between-center-meta-xxs">
            <span><i class="fa-solid fa-clock chat-icon-inline"></i>최종 수정:
              {{ item.updated_at }}</span><button class="chat-kms-copy-btn"><i
                class="fa-solid fa-copy chat-icon-inline"></i>복사
            </button></div>
        </div>
      {% endfor %}
    </div>
  </div>
  <!-- ===================== Side Panel ===================== -->
