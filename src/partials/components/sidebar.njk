<div id="sidebar" class="column col-sidebar">
  <div class="mb-6">
    <div class="sidebar-logo">S</div>
  </div>
  {% set nav_items = [
    { "page": "main.html", "title": "Main", "icon": "fa-headset" },
    { "page": "pds.html", "title": "PDS", "icon": "fa-phone-volume" },
    { "page": "sms.html", "title": "SMS", "icon": "fa-comment-sms" },
    { "page": "callback.html", "title": "Callback", "icon": "fa-phone" },
    { "page": "specific.html", "title": "Specific", "icon": "fa-user-check" },
    { "page": "chat.html", "title": "Chat", "icon": "fa-comments" }
  ] %}
  {% for item in nav_items %}
    <div
      data-page="{{ item.page }}"
      title="{{ item.title }}"
      data-role="nav-item"
      class="nav-item{% if active_page == item.page %} active{% endif %}"
    >
      <i class="fa-solid {{ item.icon }}"></i>
    </div>
  {% endfor %}
  <div title="Settings" data-role="nav-item" class="nav-item mt-auto mb-4"><i class="fa-solid fa-gear"></i></div>
</div>
